{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.0",
  "default_locale": "en",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.notion.so/*"
  ],
  "action": {
    "default_title": "__MSG_appName__"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel/side_panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "content_scripts/bot.js" ],
      "matches": [ "https://www.notion.so/*" ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
